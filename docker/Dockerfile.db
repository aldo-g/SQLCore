# Start from the official SQL Server image
FROM mcr.microsoft.com/mssql/server:2019-latest

# Switch to root to install additional tools
USER root

# Install required tools including gnupg
RUN apt-get update && \
    apt-get install -y gnupg curl apt-transport-https && \
    curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - && \
    curl https://packages.microsoft.com/config/ubuntu/20.04/prod.list > /etc/apt/sources.list.d/mssql-release.list && \
    apt-get update && ACCEPT_EULA=Y apt-get install -y mssql-tools unixodbc-dev && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Add SQL tools to the PATH
ENV PATH="$PATH:/opt/mssql-tools/bin"

# Copy setup.sql into the container
# Adjust the path if your setup.sql is in a different folder
COPY docker/setup.sql /tmp/setup.sql

# Ensure the file is readable by the mssql user
RUN chmod 644 /tmp/setup.sql

# Switch back to non-root user
USER mssql